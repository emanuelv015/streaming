{
    "name": "GetSportNews Admin",
    "short_name": "GSN Admin",
    "description": "Admin Panel for GetSportNews",
    "start_url": "/admin/index.php",
    "display": "standalone",
    "orientation": "any",
    "background_color": "#343a40",
    "theme_color": "#343a40",
    "icons": [
        {
            "src": "/admin/images/icon-192.png",
            "sizes": "192x192",
            "type": "image/png",
            "purpose": "any maskable"
        },
        {
            "src": "/admin/images/icon-512.png",
            "sizes": "512x512",
            "type": "image/png",
            "purpose": "any maskable"
        }
    ],
    "categories": ["sports", "admin"],
    "display_override": ["window-controls-overlay"],
    "edge_side_panel": {
        "preferred_width": 400
    },
    "handle_links": "preferred",
    "launch_handler": {
        "client_mode": ["navigate-existing", "auto"]
    },
    "scope": "/admin/"
} 